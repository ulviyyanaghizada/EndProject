
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
@model Question
<div class="content-wrapper">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">  Add Question</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">

                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" id="exampleInputName1" placeholder="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div><div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" id="exampleInputName1" placeholder="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="QuestionCategoryId">Question CategoryId</label>
                        <select asp-for="QuestionCategoryId" asp-items="@ViewBag.QuestionCategories">
                            <option selected disabled> Select a position</option>
                        </select>
                        <span asp-validation-for="QuestionCategoryId" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <a asp-action="Index" asp-controller="Employee" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>


