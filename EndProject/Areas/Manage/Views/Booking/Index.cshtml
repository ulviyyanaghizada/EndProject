
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

@model List<Booking>

@foreach (Booking item in Model)
{
    <div class="d-md-flex justify-content-md-center " style="max-width:95%;min-width:70%">
        <div class="row" style="max-width:95%; min-width:70%">
            <div class="card col-11 mt-3" style="max-width:95%; min-width:70%">
                <div class="row g-0">
                    <div class=" row">
                        <div class="col-md-2 d-md-flex justify-content-md-center">
                            <img style="max-height:100px; max-width:100%" src="~/assets/images/blog/user.png" class="img-fluid rounded-start ms-2 mt-2 mb-1">
                        </div>
                        <div class="col-md-8 ">
                            <div class="card-body">
                                <h2 class="card-title">FullName: @item.FullName</h2>
                                
                                <h4 class="card-title">Email:@item.Email</h4>
                                @if (item.Phones is not null)
                                {
                                    <h4 class="card-title">Phone number: @item.Phones</h4>
                                }
                            </div>
                        </div>
                    </div>
                    <hr>
                    
                </div>
            </div>
            <div class="col-1 mt-3">
                @if (item.IsComfirm != true)
                {
                    <div class="my-2">
                        <a asp-action="Comfirm" asp-route-Id="@item.Id" class="btn btn-success">
                            <i class="bi bi-patch-check"></i>
                        </a>
                    </div>
                }

                <div class="my-3">
                    <a asp-action="Ignore" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
}




